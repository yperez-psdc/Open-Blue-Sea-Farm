<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id='subtypes.ticket_subtypes' model='ir.ui.view'>
			<field name='name'>subtypes_ticket</field>
			<field name='model'>helpdesk.ticket</field>
			<field name='inherit_id' ref='helpdesk.helpdesk_ticket_view_form'/>
			<field name='arch' type='xml'>
				<xpath expr="//form[1]/sheet[1]/group[1]" position="after">
					<field name="subtype_check" string="Claim subtypes" invisible="1" />

					<group name="subtype_left" string="Query class" attrs="{'invisible': [('subtype_check','!=',True)], 'required': [('subtype_check', '=', True)]}" >
						<field name="subtype_selection" string="Query subtypes"  widget="selection" attrs="{'invisible': [('subtype_check','!=',True)], 'required': [('subtype_check', '=', True)]}"/>
					</group>

					<group name="subtype_right" string="Query subclass" attrs="{'invisible': [('subtype_check','!=',True)], 'required': [('subtype_check', '=', True)]}"> 
						<!-- attrs="{'invisible': [('include_last_name','=',False)] }" -->
						<!-- product -->
						<field name="blown_bags" string="Blown Bags"  attrs="{'invisible': [('subtype_selection','!=','product')] }"/>
						<field name="broken_boxes" string="Broken Boxes"  attrs="{'invisible': [('subtype_selection','!=','product')] }"/>
						<field name="broken_vacuum_seal" string="Broken Vacuum Seal"  attrs="{'invisible': [('subtype_selection','!=','product')] }"/>
						<field name="fatty_composition" string="Fatty Composition"  attrs="{'invisible': [('subtype_selection','!=','product')] }"/>
						<field name="red_flesh" string="Red Flesh"  attrs="{'invisible': [('subtype_selection','!=','product')] }"/>
						<field name="warm_temperature" string="Warm Temperature"  attrs="{'invisible': [('subtype_selection','!=','product')] }"/>
						<field name="weight_discrepancy" string="Weight Discrepancy"  attrs="{'invisible': [('subtype_selection','!=','product')] }"/>
						<field name="volume_error" string="Volume error"  attrs="{'invisible': [('subtype_selection','!=','product')] }"/>
						<field name="old_product" string="Old Product"  attrs="{'invisible': [('subtype_selection','!=','product')] }"/>
						<field name="discoloration" string="Discoloration"  attrs="{'invisible': [('subtype_selection','!=','product')] }"/>
						<field name="food_safety_issues" string="Food Safety Issues"  attrs="{'invisible': [('subtype_selection','!=','product')] }"/>
						<!-- product end -->

						<!-- invoicing -->
						<field name="delivery_format" string="Incorrect Delivery Format"  attrs="{'invisible': [('subtype_selection','!=','invoicing')] }"/>
						<field name="delivery_size" string="Incorrect Delivery Size"  attrs="{'invisible': [('subtype_selection','!=','invoicing')] }"/>
						<field name="price_quote" string="Incorrect Price Quote"  attrs="{'invisible': [('subtype_selection','!=','invoicing')] }"/>
						<field name="charge_error" string="Sample Charge Error"  attrs="{'invisible': [('subtype_selection','!=','invoicing')] }"/>
						<!-- invoicing end -->

						<!-- logistics -->
						<field name="log_old_product" string="Old Product"  attrs="{'invisible': [('subtype_selection','!=','logistics')] }"/>
						<field name="storage_error" string="Storage Facility Error"  attrs="{'invisible': [('subtype_selection','!=','logistics')] }"/>
						<field name="log_error" string="Logistics Delivery Error"  attrs="{'invisible': [('subtype_selection','!=','logistics')] }"/>
						<field name="certificate_delay" string="Health Certificate Delays"  attrs="{'invisible': [('subtype_selection','!=','logistics')] }"/>
						<!-- logistics end -->

						<!-- customer -->
						<field name="cancelled_harvest" string="Cancelled Harvest"  attrs="{'invisible': [('subtype_selection','!=','customer')] }"/>
						<field name="cus_didnt_pick_up" string="Customer did not pick up"  attrs="{'invisible': [('subtype_selection','!=','customer')] }"/>
						<field name="customer_other" string="Other"  attrs="{'invisible': [('subtype_selection','!=','customer')] }"/>
						<!-- customer end -->
					</group>
				</xpath>
			</field>
		</record>
	</data>
</odoo>
